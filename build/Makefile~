TARGET=RF
SRCS=$(TARGET).cpp
OBJS=$(TARGET).o
ROOTCFLAGS=$(shell root-config --cflags)
ROOTLIBS=$(shell root-config --libs)
ROOTGLIBS=$(shell root-config --glibs)
CXXFLAGS=$(ROOTCFLAGS) -Wall -fPIC
CXXLIBS=$(ROOTLIBS)
CC=g++ 
$(TARGET):$(CC) $(SRCS) $(CXXLIBS) $(CXXFLAGS) -o $@
# # suffix rule
# .cc.o:
#       $(CC) $(CXXFLAGS) -c $<
# clean
clean:rm -f $(TARGET) $(OBJS)
